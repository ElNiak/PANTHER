# ~/.tmux.conf

# Enable mouse mode (allows scrolling with the mouse wheel)
set -g mouse on

# Set up easier scrolling in copy mode
bind -n WheelUpPane if-shell -F -t = "#{mouse_any_flag}" "send-keys -M" "copy-mode -e; send-keys -M"
bind -n WheelDownPane if-shell -F -t = "#{mouse_any_flag}" "send-keys -M" "send-keys -M"

# Use 'v' to begin selection in copy mode
bind -T copy-mode-vi v send-keys -X begin-selection

# Set pane resize keys
bind -r C-h resize-pane -L 5
bind -r C-j resize-pane -D 5
bind -r C-k resize-pane -U 5
bind -r C-l resize-pane -R 5

# Here are the built-in key bindings for resizing panes:

#     Resize Pane Up:

#     sh

# Ctrl + b, then Up arrow

# Resize Pane Down:

# sh

# Ctrl + b, then Down arrow

# Resize Pane Left:

# sh

# Ctrl + b, then Left arrow

# Resize Pane Right:

# sh

# Ctrl + b, then Right arrow
