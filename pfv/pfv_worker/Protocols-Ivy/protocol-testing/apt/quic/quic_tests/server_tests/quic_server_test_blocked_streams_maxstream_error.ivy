#
# We fix the initial transport parameters here. TODO: In principle these
# parameters should be selected randomly by some event.
#

include ivy_quic_client_standard_tp

after init {
    sock := net.open(endpoint_id.client,client.ep);
    sock_alt := net.open(endpoint_id.client_alt,client_alt);
    sock_vn := sock; # net.open(endpoint_id.client_vn,client_vn);
    client.set_tls_id(0);
    second_client.set_tls_id(0); # TODO to avoid error
    server.set_tls_id(1);
    var extns := tls_extensions.empty;
    extns := extns.append(make_transport_parameters);
    call tls_api.upper.create(0,false,extns);  # false means this instance of tls is not a server
}

#    Maximum Streams:  A variable-length integer indicating the maximum
#       number of streams allowed at the time the quic_frame was sent.  This
#       value cannot exceed 2^60, as it is not possible to encode stream
#       IDs larger than 2^62-1.  Receipt of a quic_frame that encodes a larger
#       stream ID MUST be treated as a STREAM_LIMIT_ERROR or a
#       FRAME_ENCODING_ERROR.

before quic_frame.streams_blocked.handle(f:quic_frame.streams_blocked,scid:cid,dcid:cid) {
    if _generating {
        require client.ep.addr ~= 0;
        require scid = the_cid;
        f.id := 0x01ffffffffffffff; #TODO > not implemented 0x0100000000000000
    }
}


# Generate connection_close frames only for the environment process(es).
#
# Note: requiring the `err_code` is zero on non-generated frames means that
# we stop the test if the peer reports a protocol error. 

before quic_frame.connection_close.handle(f:quic_frame.connection_close,scid:cid,dcid:cid) {
    if _generating {
        require scid = the_cid;
    } else {
        require is_frame_encoding_error | is_stream_limit_error
    }
}

# Generate application_close frames only for the environment process(es).

before quic_frame.application_close.handle(f:quic_frame.application_close,scid:cid,dcid:cid) {
    if _generating {
        require scid = the_cid;
    }
}


